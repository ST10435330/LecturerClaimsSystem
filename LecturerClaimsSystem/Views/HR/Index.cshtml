@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="row">
    <div class="col-md-12">
        <h2>👔 HR Dashboard</h2>
        <p class="text-muted">Manage claims, generate reports, and process payments</p>

        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="bi bi-file-earmark-text" style="font-size: 3rem; color: #3498db;"></i>
                        <h5 class="mt-3">Reports</h5>
                        <a asp-action="Reports" class="btn btn-primary btn-sm">View Reports</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="bi bi-calendar-month" style="font-size: 3rem; color: #e74c3c;"></i>
                        <h5 class="mt-3">Monthly Report</h5>
                        <a asp-action="MonthlyReport" class="btn btn-danger btn-sm">Generate</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="bi bi-receipt" style="font-size: 3rem; color: #27ae60;"></i>
                        <h5 class="mt-3">Review Claims</h5>
                        <a asp-controller="Review" asp-action="Index" class="btn btn-success btn-sm">Review</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="bi bi-people" style="font-size: 3rem; color: #f39c12;"></i>
                        <h5 class="mt-3">Lecturers</h5>
                        <a asp-action="LecturerManagement" class="btn btn-warning btn-sm">Manage</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>