@{
    ViewData["Title"] = "Lecturer Management";
    var lecturerStats = ViewBag.LecturerStats as List<dynamic>;
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>👥 Lecturer Management</h2>
                <p class="text-muted">Manage lecturer accounts and view their claim statistics</p>
            </div>
            <div>
                <a asp-action="AddLecturer" class="btn btn-primary">
                    ➕ Add New Lecturer
                </a>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (lecturerStats == null || !lecturerStats.Any())
        {
            //No Lecturers Found 
            <div class="alert alert-info">
                <h4>No Lecturers Found</h4>
                <p>There are currently no lecturers in the system. Click "Add New Lecturer" to get started.</p>
            </div>
        }
        else
        {
            //Summary Cards 
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <h3>@lecturerStats.Count</h3>
                            <p>Total Lecturers</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <h3>@lecturerStats.Sum(l => l.TotalClaims)</h3>
                            <p>Total Claims</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <h3>@lecturerStats.Sum(l => l.ApprovedClaims)</h3>
                            <p>Approved Claims</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body text-center">
                            <h3>R@lecturerStats.Sum(l => l.TotalEarned).ToString("N2")</h3>
                            <p>Total Paid Out</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lecturers Table -->
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5>📋 Lecturer List</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Lecturer ID</th>
                                    <th>Full Name</th>
                                    <th>Username</th>
                                    <th>Total Claims</th>
                                    <th>Approved</th>
                                    <th>Pending</th>
                                    <th>Rejected</th>
                                    <th>Total Earned</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lecturerStats)
                                {
                                    <tr>
                                        <td><strong>#@item.Lecturer.UserId</strong></td>
                                        <td>@item.Lecturer.FullName</td>
                                        <td>@item.Lecturer.Username</td>
                                        <td><span class="badge bg-primary">@item.TotalClaims</span></td>
                                        <td><span class="badge bg-success">@item.ApprovedClaims</span></td>
                                        <td><span class="badge bg-warning">@item.PendingClaims</span></td>
                                        <td><span class="badge bg-danger">@item.RejectedClaims</span></td>
                                        <td><strong class="text-success">R@item.TotalEarned.ToString("N2")</strong></td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="LecturerDetails" asp-route-id="@item.Lecturer.UserId"
                                                   class="btn btn-sm btn-info" title="View Details">
                                                    👁️ View
                                                </a>
                                                <a asp-action="EditLecturer" asp-route-id="@item.Lecturer.UserId"
                                                   class="btn btn-sm btn-warning" title="Edit">
                                                    ✏️ Edit
                                                </a>
                                                <a asp-action="DownloadLecturerReport" asp-route-id="@item.Lecturer.UserId"
                                                   class="btn btn-sm btn-success" title="Download Report">
                                                    ⬇️ Report
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">← Back to HR Dashboard</a>
        </div>
    </div>
</div>