@{
    ViewData["Title"] = "Monthly Report";
    var claims = ViewBag.Claims as List<LecturerClaimsSystem.Models.Claim>;
    var month = ViewBag.Month;
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3>📅 Monthly Claims Report - @month</h3>
            </div>
            <div class="card-body">
                <!-- Summary Statistics -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h4>@claims.Count</h4>
                                <p>Total Claims</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h4>@claims.Count(c => c.Status == "Approved")</h4>
                                <p>Approved</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h4>@claims.Count(c => c.Status == "Pending")</h4>
                                <p>Pending</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h4>R @claims.Where(c => c.Status == "Approved").Sum(c => c.TotalAmount).ToString("N2")</h4>
                                <p>Total Paid</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Claims Table -->
                <h5>Detailed Claims List</h5>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Submitted</th>
                                <th>Reviewed By</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in claims)
                            {
                                <tr>
                                    <td><strong>#@claim.ClaimId</strong></td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>R @claim.HourlyRate.ToString("N2")</td>
                                    <td><strong>R @claim.TotalAmount.ToString("N2")</strong></td>
                                    <td>
                                        <span class="badge bg-@(claim.Status == "Approved" ? "success" : claim.Status == "Rejected" ? "danger" : "warning")">
                                            @claim.Status
                                        </span>
                                    </td>
                                    <td>@claim.SubmittedDate.ToString("dd/MM/yyyy")</td>
                                    <td>@(claim.ReviewedBy ?? "N/A")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="4" class="text-end"><strong>TOTAL:</strong></td>
                                <td colspan="4"><strong>R @claims.Sum(c => c.TotalAmount).ToString("N2")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <!-- Action Buttons -->
                <div class="mt-4">
                    <a asp-action="DownloadMonthlyReport" class="btn btn-success">
                        ⬇️ Download as CSV
                    </a>
                    <button onclick="window.print()" class="btn btn-primary">
                        🖨️ Print Report
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        ← Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .btn {
            display: none;
        }
    }
</style>