@model IEnumerable<LecturerClaimsSystem.Models.Claim>
@{
    ViewData["Title"] = "Review Claims";
}

<div class="row">
    <div class="col-md-12">
        <h2>✓ Review Claims - @ViewBag.Role Dashboard</h2>
        <p class="text-muted">Review and approve or reject lecturer claims</p>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h3>@Model.Count(c => c.Status == "Pending")</h3>
                        <p>Pending Claims</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h3>@Model.Count(c => c.Status == "Approved")</h3>
                        <p>Approved Claims</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body text-center">
                        <h3>@Model.Count(c => c.Status == "Rejected")</h3>
                        <p>Rejected Claims</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h3>@Model.Count()</h3>
                        <p>Total Claims</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Tabs -->
        <ul class="nav nav-tabs mb-3" id="claimTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button">
                    All Claims (@Model.Count())
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button">
                    Pending (@Model.Count(c => c.Status == "Pending"))
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button">
                    Approved (@Model.Count(c => c.Status == "Approved"))
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button">
                    Rejected (@Model.Count(c => c.Status == "Rejected"))
                </button>
            </li>
        </ul>

        <div class="tab-content" id="claimTabContent">
            <!-- All Claims -->
            <div class="tab-pane fade show active" id="all" role="tabpanel">
                @await Html.PartialAsync("_ClaimsList", Model)
            </div>
            <!-- Pending Claims -->
            <div class="tab-pane fade" id="pending" role="tabpanel">
                @await Html.PartialAsync("_ClaimsList", Model.Where(c => c.Status == "Pending"))
            </div>
            <!-- Approved Claims -->
            <div class="tab-pane fade" id="approved" role="tabpanel">
                @await Html.PartialAsync("_ClaimsList", Model.Where(c => c.Status == "Approved"))
            </div>
            <!-- Rejected Claims -->
            <div class="tab-pane fade" id="rejected" role="tabpanel">
                @await Html.PartialAsync("_ClaimsList", Model.Where(c => c.Status == "Rejected"))
            </div>
        </div>
    </div>
</div>