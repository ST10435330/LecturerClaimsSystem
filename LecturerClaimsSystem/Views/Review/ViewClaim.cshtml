@model LecturerClaimsSystem.Models.Claim
@{
    ViewData["Title"] = "Review Claim";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3>🔍 Review Claim - #@Model.ClaimId</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h4>Claim Information</h4>
                        <hr />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Lecturer Name:</strong>
                                <p>@Model.LecturerName</p>
                            </div>
                            <div class="col-md-6">
                                <strong>Current Status:</strong>
                                <p><span class="status-badge status-@Model.Status.ToLower()">@Model.Status</span></p>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Hours Worked:</strong>
                                <p class="fs-5">@Model.HoursWorked hours</p>
                            </div>
                            <div class="col-md-4">
                                <strong>Hourly Rate:</strong>
                                <p class="fs-5">@Model.HourlyRate.ToString("N2")</p>
                            </div>
                            <div class="col-md-4">
                                <strong>Total Amount:</strong>
                                <h4 class="text-success">@Model.TotalAmount.ToString("N2")</h4>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Submitted Date:</strong>
                                <p>@Model.SubmittedDate.ToString("dd MMMM yyyy HH:mm")</p>
                            </div>
                            @if (Model.ReviewedDate != null)
                            {
                                <div class="col-md-6">
                                    <strong>Reviewed Date:</strong>
                                    <p>@Model.ReviewedDate?.ToString("dd MMMM yyyy HH:mm")</p>
                                </div>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ReviewedBy))
                        {
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <strong>Reviewed By:</strong>
                                    <p>@Model.ReviewedBy</p>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                        {
                            <div class="mb-3">
                                <strong>Additional Notes:</strong>
                                <div class="bg-light p-3 rounded">
                                    @Model.AdditionalNotes
                                </div>
                            </div>
                        }

                        @if (Model.Status == "Rejected" && !string.IsNullOrEmpty(Model.RejectionReason))
                        {
                            <div class="alert alert-danger">
                                <strong>Rejection Reason:</strong>
                                <p class="mb-0">@Model.RejectionReason</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.DocumentPath))
                        {
                            <div class="mb-3">
                                <strong>Supporting Document:</strong><br />
                                <a href="@Model.DocumentPath" target="_blank" class="btn btn-outline-primary mt-2">
                                    📎 Download @Model.OriginalFileName
                                </a>
                            </div>
                        }
                    </div>

                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5>Actions</h5>
                                <hr />

                                @if (Model.Status == "Pending")
                                {
                                    <form method="post" asp-action="ApproveClaim" asp-route-id="@Model.ClaimId" class="mb-3">
                                        <button type="submit" class="btn btn-success w-100" onclick="return confirm('Are you sure you want to approve this claim?');">
                                            ✓ Approve Claim
                                        </button>
                                    </form>

                                    <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                        ✗ Reject Claim
                                    </button>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        This claim has already been @Model.Status.ToLower().
                                    </div>
                                }

                                <hr />
                                <a asp-action="Index" class="btn btn-secondary w-100">
                                    ← Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Reject Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="RejectClaim" asp-route-id="@Model.ClaimId">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">Reason for Rejection:</label>
                        <textarea name="rejectionReason" id="rejectionReason" class="form-control" rows="4" required></textarea>
                        <small class="text-muted">Please provide a clear reason for rejecting this claim.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>


