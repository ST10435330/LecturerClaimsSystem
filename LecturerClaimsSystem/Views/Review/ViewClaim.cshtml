@model LecturerClaimsSystem.Models.Claim
@{
    ViewData["Title"] = "Review Claim";
    var validationResult = ViewBag.ValidationResult as LecturerClaimsSystem.Services.ClaimValidationResult;
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <!-- AUTOMATED VALIDATION PANEL -->
        @if (validationResult != null && Model.Status == "Pending")
        {
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5>🤖 Automated Claim Analysis</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h6>Risk Assessment</h6>
                            <div class="d-flex align-items-center">
                                <h3 class="me-3">
                                    <span class="badge bg-@validationResult.RiskLevelColor">
                                        @validationResult.RiskLevel Risk
                                    </span>
                                </h3>
                                <div class="progress flex-grow-1" style="height: 25px;">
                                    <div class="progress-bar bg-@validationResult.RiskLevelColor"
                                         role="progressbar"
                                         style="width: @validationResult.RiskScore%"
                                         aria-valuenow="@validationResult.RiskScore"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        @validationResult.RiskScore%
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h6>Validation Status</h6>
                            @if (validationResult.IsValid)
                            {
                                <span class="badge bg-success fs-5">✓ Valid</span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-5">✗ Invalid</span>
                            }
                        </div>
                        <div class="col-md-4">
                            <h6>Auto-Approval</h6>
                            @if (validationResult.AutoApprovalEligible)
                            {
                                <span class="badge bg-success fs-5">✓ Eligible</span>
                                <form method="post" asp-action="AutoApproveClaim" asp-route-id="@Model.ClaimId" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-success mt-2">
                                        🤖 Auto-Approve
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-5">Manual Review Required</span>
                            }
                        </div>
                    </div>

                    @if (validationResult.Errors.Any())
                    {
                        <div class="alert alert-danger mt-3">
                            <strong>❌ Errors:</strong>
                            <ul class="mb-0">
                                @foreach (var error in validationResult.Errors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (validationResult.Warnings.Any())
                    {
                        <div class="alert alert-warning mt-3">
                            <strong>⚠️ Warnings:</strong>
                            <ul class="mb-0">
                                @foreach (var warning in validationResult.Warnings)
                                {
                                    <li>@warning</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (validationResult.RequiresManagerApproval)
                    {
                        <div class="alert alert-info mt-3">
                            <strong>ℹ️ Manager Approval Required</strong>
                            <p class="mb-0">This claim requires approval from a Manager or HR due to the flags above.</p>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- MAIN CLAIM DETAILS CARD -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3>🔍 Review Claim - #@Model.ClaimId</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h4>Claim Information</h4>
                        <hr />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Lecturer Name:</strong>
                                <p>@Model.LecturerName</p>
                            </div>
                            <div class="col-md-6">
                                <strong>Current Status:</strong>
                                <p><span class="status-badge status-@Model.Status.ToLower()">@Model.Status</span></p>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Hours Worked:</strong>
                                <p class="fs-5">@Model.HoursWorked hours</p>
                            </div>
                            <div class="col-md-4">
                                <strong>Hourly Rate:</strong>
                                <p class="fs-5">R@(Model.HourlyRate.ToString("N2"))</p>
                            </div>
                            <div class="col-md-4">
                                <strong>Total Amount:</strong>
                                <h4 class="text-success">R@(Model.TotalAmount.ToString("N2"))</h4>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Submitted Date:</strong>
                                <p>@Model.SubmittedDate.ToString("dd MMMM yyyy HH:mm")</p>
                            </div>
                            @if (Model.ReviewedDate != null)
                            {
                                <div class="col-md-6">
                                    <strong>Reviewed Date:</strong>
                                    <p>@Model.ReviewedDate?.ToString("dd MMMM yyyy HH:mm")</p>
                                </div>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ReviewedBy))
                        {
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <strong>Reviewed By:</strong>
                                    <p>@Model.ReviewedBy</p>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                        {
                            <div class="mb-3">
                                <strong>Additional Notes:</strong>
                                <div class="bg-light p-3 rounded">
                                    @Model.AdditionalNotes
                                </div>
                            </div>
                        }

                        @if (Model.Status == "Rejected" && !string.IsNullOrEmpty(Model.RejectionReason))
                        {
                            <div class="alert alert-danger">
                                <strong>Rejection Reason:</strong>
                                <p class="mb-0">@Model.RejectionReason</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.DocumentPath))
                        {
                            <div class="mb-3">
                                <strong>Supporting Document:</strong><br />
                                <a href="@Model.DocumentPath" target="_blank" class="btn btn-outline-primary mt-2">
                                    📎 Download @Model.OriginalFileName
                                </a>
                            </div>
                        }
                    </div>

                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5>Actions</h5>
                                <hr />

                                @if (Model.Status == "Pending")
                                {
                                    <form method="post" asp-action="ApproveClaim" asp-route-id="@Model.ClaimId" class="mb-3">
                                        <button type="submit" class="btn btn-success w-100" onclick="return confirm('Are you sure you want to approve this claim?');">
                                            ✓ Approve Claim
                                        </button>
                                    </form>

                                    <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                        ✗ Reject Claim
                                    </button>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        This claim has already been @Model.Status.ToLower().
                                    </div>
                                }

                                <hr />
                                <a asp-action="Index" class="btn btn-secondary w-100">
                                    ← Back to List
                                </a>
                            </div>
                        </div>

                        @if (Model.Status == "Pending" && validationResult != null)
                        {
                            <div class="card bg-light mt-3">
                                <div class="card-body">
                                    <h6>Quick Stats</h6>
                                    <hr />
                                    <small>
                                        <strong>Validation:</strong> @(validationResult.IsValid ? "✓ Valid" : "✗ Invalid")<br />
                                        <strong>Risk Level:</strong> @validationResult.RiskLevel<br />
                                        <strong>Warnings:</strong> @validationResult.Warnings.Count<br />
                                        <strong>Errors:</strong> @validationResult.Errors.Count<br />
                                        @if (validationResult.RequiresManagerApproval)
                                        {
                                            <span class="badge bg-warning mt-2">Manager Approval Required</span>
                                        }
                                    </small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="rejectModalLabel">Reject Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="RejectClaim" asp-route-id="@Model.ClaimId">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">Reason for Rejection: *</label>
                        <textarea name="rejectionReason" id="rejectionReason" class="form-control" rows="4" required placeholder="Please provide a clear reason for rejecting this claim..."></textarea>
                        <small class="text-muted">This reason will be visible to the lecturer.</small>
                    </div>

                    @if (validationResult != null && validationResult.Warnings.Any())
                    {
                        <div class="alert alert-warning">
                            <strong>Suggested reasons based on validation:</strong>
                            <ul class="mb-0 mt-2">
                                @foreach (var warning in validationResult.Warnings.Take(3))
                                {
                                    <li>@warning</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .status-badge {
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: bold;
        font-size: 0.9rem;
    }

    .status-pending {
        background-color: #f39c12;
        color: white;
    }

    .status-approved {
        background-color: #27ae60;
        color: white;
    }

    .status-rejected {
        background-color: #e74c3c;
        color: white;
    }

    .progress {
        background-color: #e9ecef;
    }

    .badge {
        padding: 8px 12px;
    }
</style>