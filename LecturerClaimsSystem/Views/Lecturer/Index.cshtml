@model IEnumerable<LecturerClaimsSystem.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>📋 My Claims</h2>
            <a asp-action="SubmitClaim" class="btn btn-primary">
                ➕ Submit New Claim
            </a>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Any())
        {
            <div class="row">
                @foreach (var claim in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title">Claim #@claim.ClaimId</h5>
                                    <span class="status-badge status-@claim.Status.ToLower()">
                                        @claim.Status
                                    </span>
                                </div>
                                <p class="card-text">
                                    <strong>Hours Worked:</strong> @claim.HoursWorked<br />
                                    <strong>Hourly Rate:</strong> @claim.HourlyRate<br />
                                    <strong>Total Amount:</strong> <span class="text-success fw-bold">@claim.TotalAmount.ToString("N2")</span><br />
                                    <strong>Submitted:</strong> @claim.SubmittedDate.ToString("dd MMM yyyy HH:mm")<br />
                                    @if (claim.DocumentPath != null)
                                    {
                                        <strong>Document:</strong> <a href="@claim.DocumentPath" target="_blank">@claim.OriginalFileName</a>

                                        <br />
                                    }
                                    @if (claim.ReviewedDate != null)
                                    {
                                        <strong>Reviewed:</strong> @claim.ReviewedDate?.ToString("dd MMM yyyy HH:mm")

                                        <br />
                                        <strong>Reviewed By:</strong> @claim.ReviewedBy

                                        <br />
                                    }
                                    @if (claim.Status == "Rejected" && !string.IsNullOrEmpty(claim.RejectionReason))
                                    {
                                        <strong>Reason:</strong> <span class="text-danger">@claim.RejectionReason</span>
                                    }
                                </p>
                                <a asp-action="ViewClaim" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-outline-primary">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h4>No claims found</h4>
                <p>You haven't submitted any claims yet. Click the button above to submit your first claim!</p>
            </div>
        }
    </div>
</div>